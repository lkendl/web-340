<!DOCTYPE html>
<html lang="en">

  <%- include ("header") %>
  <%- include ("navbar") %>

  <body class="default-theme">

    <div role="main" class="main">
      <br /><br />

      <h2>-- Employee Record --</h2>
      <br />
      <div>
        <div class="form-group">
          <label for="txtFirstName">First Name:</label>
          <input
            type="text"
            class="form-control"
            id="txtFirstName"
            readonly
            value="<%= employee[0].firstName %>"
            name="txtFirstName"
          />

           <label for="txtLastName">Last Name:</label>
          <input
            type="text"
            class="form-control"
            id="txtLastName"
            readonly
            value="<%= employee[0].lastName %>"
            name="txtLastName"
          />
        </div>
      </div>

      <br /><br />

      <a href="/list">Return to Employees</a>
    </div>

    <%- include ("footer") %>
    <%- include ("scripts") %>

  </body>
</html>